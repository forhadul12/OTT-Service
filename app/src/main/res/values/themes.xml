<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OTTService" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/back_color</item>
        <item name="colorOnPrimary">@color/secondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@string/font</item>
        <!-- Customize your theme here. -->
    </style>


    <!--RECYCLER VIEW TITLE-->
    <style name="recyclerViewTitleTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/recycler_view_title_text_size</item>
    </style>

    <!--RECYCLER VIEW MORE BUTTON-->
    <style name="recyclerViewMoreTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:text">More</item>
        <item name="android:textSize">@dimen/recycler_view_more_text_size</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <!--VIDEO TITLE-->
    <style name="videoTitleTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:text">Dhaka Attack</item>
        <item name="android:textSize">@dimen/video_title_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--VIDEO GENRE-->
    <style name="movieGenreTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:text">Action/Thriller</item>
        <item name="android:textSize">@dimen/video_genre_text_size</item>
    </style>

    <!--TAB TEXTVIEW INACTIVE-->
    <style name="tabTextViewStyleInactiveStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:textSize">@dimen/tab_text_inactive_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!--TAB TEXTVIEW ACTIVE-->
    <style name="tabTextViewStyleActiveStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/tab_text_active_size</item>
        <item name="android:gravity">top|center</item>
    </style>

    <!--FREE FLAG TEXTVIEW-->
    <style name="freeFlagTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/_6sdp</item>
        <item name="android:paddingRight">@dimen/_6sdp</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:text">@string/free</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>


    <!--RATING BAR-->
    <style name="rating" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/dusk_yellow</item>
    </style>


    <!--CONSTRAINT LAYOUT CONTAINER-->
    <style name="constraint">
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="playFab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:src">@drawable/play_arrow</item>
        <item name="borderWidth">0dp</item>
        <item name="tint">@color/white</item>
        <item name="maxImageSize">@dimen/_30sdp</item>
    </style>

    <style name="heartShapeImageView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/heart</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="recyclerView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

</resources>